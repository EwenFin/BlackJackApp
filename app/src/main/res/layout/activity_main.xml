<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    tools:context="com.codeclan.blackjack.MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="top"
        android:textSize="40dp"
        android:textAlignment="center"
        android:padding="25dp"/>


    <ImageView
        android:id="@+id/welcome_image"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="350dp" />


    <EditText
        android:id="@+id/name_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:layout_marginTop="50dp"
        android:layout_weight="0.10"
        android:hint="@string/enter_name"
        android:textSize="36dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center|bottom">


    <Button
        android:id="@+id/play_blackjack"
        android:layout_width="wrap_content"
        android:text="@string/play_blackjack"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:textSize="24dp"
        android:onClick="onBlackJackButtonClicked"/>

    <Button
        android:id="@+id/play_poker"
        android:layout_width="wrap_content"
        android:text="@string/play_poker"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp"
        android:textSize="24dp"
        android:onClick="onPokerButtonClicked"/>



    </LinearLayout>
</LinearLayout>
