<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    tools:context="com.codeclan.blackjack.PokerActivity">

    <TextView
        android:id="@+id/game_text"
        android:textSize="36dp"
        android:padding="14dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id ="@+id/card1image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

        <ImageView
            android:id ="@+id/card2image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

        </LinearLayout>

    <TextView
        android:id = "@+id/your_hand_text"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id ="@+id/card5image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

        <ImageView
            android:id ="@+id/card6image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

        <ImageView
            android:id ="@+id/card7image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

        <ImageView
            android:id ="@+id/card8image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

        <ImageView
            android:id ="@+id/card9image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id ="@+id/card3image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

        <ImageView
            android:id ="@+id/card4image"
            android:layout_width="100dp"
            android:layout_height="140dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/poker_deal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/deal"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:onClick="onPokerDealButtonClicked"/>

        <Button
            android:id="@+id/flop_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/flop"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:onClick="onFlopButtonClicked"/>

        <Button
            android:id="@+id/turn_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/turn"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:onClick="onTurnButtonClicked"/>

        <Button
            android:id="@+id/river_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/river"
            android:textAllCaps="false"
            android:textSize="30dp"
            android:onClick="onRiverButtonClicked"/>



    </LinearLayout>
</LinearLayout>
    </ScrollView>